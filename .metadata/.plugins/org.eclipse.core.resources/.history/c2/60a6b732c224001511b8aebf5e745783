package Ventanas;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JButton;
import javax.swing.SwingConstants;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JTextPane;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class ventana3 extends JFrame implements ActionListener {

	private JPanel contentPane;
	private JTextField textField_1;
	private JButton btnManejar;
	private JButton btnPonernafta;
	private JLabel lblValorNafta;
	

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ventana3 frame = new ventana3();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public ventana3() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		
		JButton btnManejar = new JButton("manejar");
		contentPane.setLayout(null);
		btnManejar.setBounds(0, 0, 89, 23);
		btnManejar.setHorizontalAlignment(SwingConstants.LEFT);
		btnManejar.addActionListener(this);
		contentPane.add(btnManejar);
		
		JButton btnPonernafta = new JButton("PonerNafta");
		btnPonernafta.setBounds(321, 0, 113, 23);
		btnPonernafta.addActionListener(this);
		contentPane.add(btnPonernafta);
		
		JLabel lblNafta = new JLabel(" Nafta: ");
		lblNafta.setBounds(0, 247, 46, 14);
		contentPane.add(lblNafta);
		
		textField_1 = new JTextField();
		textField_1.setBounds(321, 30, 113, 20);
		contentPane.add(textField_1);
		textField_1.setColumns(10);
		
		JLabel lblValorNafta = new JLabel("");
		lblValorNafta.setBounds(37, 247, 46, 14);
		contentPane.add(lblValorNafta);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource()==btnManejar){
			//Manejar()
		}
		if(e.getSource()==btnPonernafta){
			this.lblValorNafta.setText(this.textField_1.getText());
		}
		
	}
}
